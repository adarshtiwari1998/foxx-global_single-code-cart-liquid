    const timestamp = Date.now();
    const cartData = {
      total: currentTotal,
      items: {{ cart.item_count }},
      session: document.getElementById('cart-session-id').value
    };
    return btoa(JSON.stringify({ ...cartData, timestamp }));
  }
  
